{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "node backend-simple.cjs",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "$PORT",
        "JWT_SECRET": "$JWT_SECRET",
        "DB_PATH": "./database.sqlite",
        "CORS_ORIGIN": "https://imena-gest.vercel.app"
      }
    }
  }
}
